import java.util.Scanner;
 
public class PasswordValidator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
 
        System.out.print("Введите пароль: ");
        String password = scanner.nextLine();
 
    
        if (isPasswordValid(password)) {
            System.out.println("Пароль соответствует условиям.");
        } else {
            System.out.println("Пароль не соответствует условиям.");
        }
 
    }
 
    
    public static boolean isPasswordValid(String password) {
        // Проверка длины пароля
        if (password.length() < 8 || password.length() > 12) {
            return false;
        }
 
        
        boolean hasUpperCase = false;
        boolean hasLowerCase = false;
        boolean hasSpecialChar = false;
        boolean hasPunctuation = false;
 
        
        String specialChars = "$@#%^*<>";
        
        String punctuation = ".,;:!?";
 
        
        for (int i = 0; i < password.length(); i++) {
            char ch = password.charAt(i); 
 
            if (Character.isUpperCase(ch)) {
                hasUpperCase = true;
            } else if (Character.isLowerCase(ch)) {
                hasLowerCase = true;
            } else if (specialChars.indexOf(ch) != -1) {
                hasSpecialChar = true;
            } else if (punctuation.indexOf(ch) != -1) {
                hasPunctuation = true;
            }
        }
 
      
        return hasUpperCase && hasLowerCase && hasSpecialChar && hasPunctuation;
    }
}
