public class Main {
    public static void main(String[] args) {
        // Создание списка школьников
        List<Школьник> школьники = new ArrayList<>();
        школьники.add(new Школьник("Анна", "женский", 16, List.of(5, 5, 5, 5, 4, 4), List.of("областная", "первое место школьная")));
        школьники.add(new Школьник("Иван", "мужской", 17, List.of(5, 5, 5, 5, 5, 5), List.of("городская")));

        // Вывод информации о девочках, получивших первые места на олимпиадах
        for (Школьник школьник : школьники) {
            if (школьник.пол.equals("женский") && школьник.олимпиады.contains("первое место школьная")) {
                System.out.println(школьник);
            }
        }

        // Создание списка студентов
        List<Студент> студенты = new ArrayList<>();
        студенты.add(new Студент("Мария", "женский", 20, List.of(5.0, 5.0, 5.0), List.of(5, 5)));
        студенты.add(new Студент("Петр", "мужской", 21, List.of(4.5, 4.75, 5.0), List.of(5, 4)));

        // Вывод информации о студентах с оценками за курсовые работы
        for (Студент студент : студенты) {
            if (!студент.оценкиКурсовых.isEmpty()) {
                System.out.println(студент);
            }
        }

        // Создание и печать общего списка школьников и студентов, которые должны получать специальную стипендию
        List<Учащийся> кандидатыНаСтипендию = new ArrayList<>();
        for (Школьник школьник : школьники) {
            if (школьник.имеетСпециальнуюСтипендию()) {
                кандидатыНаСтипендию.add(школьник);
            }
        }
        for (Студент студент : студенты) {
            if (студент.имеетСпециальнуюСтипендию()) {
                кандидатыНаСтипендию.add(студент);
            }
        }

        System.out.println("Кандидаты на специальную стипендию:");
        for (Учащийся учащийся : кандидатыНаСтипендию) {
            System.out.println(учащийся);
        }
    }
}
